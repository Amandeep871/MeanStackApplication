extends layout

block content
    h4 Create A Music
    br
    form(method='POST' action='/create')
        .form-group
            input#title.form-control(type='text' name='title' placeholder='Title')
        .form-group
            input#genre.form-control(type='text' name='genre' placeholder='Genre')
        .form-group
            input#artistName.form-control(type='text' name='artistName' placeholder='ArtistName')
        br
        .form-group
           label(for='albumName') Album
           .row
              .col
                 input#albumName.form-control(type='text' name='albumName' placeholder='Name')
              .col
                  input#albumName.form-control(type='text' name='albumPicture' placeholder='Picture')
        br
        .form-group
            label(for="release-date") Release Date:
            input#release-date.form-control(type='date' name='releaseDate' placeholder='Release Date')
        br
        
            
        br
        button.btn.btn-primary(type='submit') Create Music